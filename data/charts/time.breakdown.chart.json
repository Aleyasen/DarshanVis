{
    "_comment": "Change to new database, don't have ID column anymore, unique_iotime become local_iotime, etc... ",
    "id": 12, 
    "name": "io-type",
    "type": "bar.scatter",
    "template": "/../charts/bar.scatter.js.php",
    "highchart-confs": {
        "chart": {
            "zoomType": "xy",
            "width": 800
        },
        "title": {
            "text": "Breakdown of time for each job",
            "margin": -5,
            "style": {
                "margin-top": "40px"
            }
        },
        "subtitle": {
            "text": ""
        },
        "xAxis": [
            {
                "tickInterval": 2000,
                "title": {
                    "text": "Jobs",
                    "style": {
                        "font-size": "14px"
                    }
                },
                "labels": {
                    "format": "{value}",
                    "style": {
                        "font-size": "14px"
                    }
                },
                "crosshair": true
            }
        ],
        "yAxis": [
            {
                "min": 0,
                "labels": {
                    "format": "{value}%",
                    "style": {
                        "font-size": "14px"
                    }
                },
                "title": {
                    "text": "Total Time (%)",
                    "style": {
                        "font-size": "15px"
                    }
                }
            },
            {
                "min": 1,
                "type": "logarithmic",
                "gridLineWidth": 0,
                "title": {
                    "text": "Number of Processes",
                    "margin": 2,
                    "style": {
                        "color": "Highcharts.getOptions().colors[0]",
                        "font-size": "15px"
                    }
                },
                "labels": {
                    "align": "left",
                    "x": 3,
                    "y": 5,
                    "style": {
                        "color": "Highcharts.getOptions().colors[0]",
                        "font-size": "14px"
                    }
                }
                ,
                "opposite": true
            },
            {
                "min": 1,
                "type": "logarithmic",
                "gridLineWidth": 0,
                "title": {
                    "text": "Total Bytes Read/Written",
                    "margin": 2,
                    "style": {
                        "color": "darkblue",
                        "font-size": "15px"
                    }
                },
                "labels": {
                    "align": "left",
                    "x": 3,
                    "y": 5,
                    "style": {
                        "color": "darkblue",
                        "font-size": "14px"
                    }
                },
                "opposite": true
            }
        ],
        "tooltip": {
            "shared": true
        }
    },
    "series": [
        {
            "type": "stacked",
            "name": "series1",
            "query": {
                "select": "start_time, nprocs, total_bytes, local_iotime - local_meta as localio, local_meta, global_iotime - global_meta as globalio, global_meta, (runtime - iotime) as notio",
                "from": "jobs_info"
            },
            "title1": "Non-global Data I/O",
            "attr1": "localio",
            "title2": "Non-global Metadata",
            "attr2": "local_meta",
            "title3": "Global Data I/O",
            "attr3": "globalio",
            "title4": "Global Metadata",
            "attr4": "global_meta",
            "title5": "Not I/O",
            "attr5": "notio",
            "title6": "Number of Processes",
            "attr6": "nprocs",
            "title7": "Total Bytes Read/Written",
            "attr7": "total_bytes"
        }
    ]
}