{
    "id": 8,
    "name": "Average and Maximum I/O Throughput of  chart",
    "type": "line",
    "template": "charts/line.js.php",
    "filter": "components/_filters.php",
    "highchart-confs": {
        "title": "Average and Maximum I/O Throughput of App",
        "chart": {
            "zoomType": "xy",
            "width": 800
        },
        "title": {
            "text": "Average and Maximum I/O Throughput of App",
            "margin": -5,
            "style": {
                "margin-top": "40px"
            }
        },
        "subtitle": "",
        "xAxis": {
            "min": 0,
            "labels": {
                "format": "{value}",
                "style": {
                    "font-size": "12px"
                }
            },
            "title": {
                "text": "jobs",
                "style": {
                    "font-size": "13px"
                }
            },
            "crosshair": true
        },
        "yAxis": {
            "type": "logarithmic",
            "labels": {
                "style": {
                    "font-size": "14px"
                }
            },
            "title": {
                "text": "Throughputs in logarithmic scale",
                "style": {
                    "font-size": "15px"
                }
            }

        },
        "tooltip": {
            "valueSuffix": "GB/s",
            "shared": true

        },
        "plotOptions": {
            "series": {
                "allowPointSelect": true
            }
        }
    },
    "query": {
        "select": "max(agg_perf_MB) as max_thruput, median(agg_perf_MB) as median_thruput",
        "from": "jobs_info",
        "where": "agg_perf_MB is not null",
        "group": "appname"
    },
    "series": [
        {
            "attribute": "median_thruput",
            "name": "Median I/O Throughput",
            "description": "",
            "color": "#CC0000",
            "type": "line"
        },
        {
            "attribute": "max_thruput",
            "name": "Maximum I/O Throughput",
            "description": "",
            "color": "#33FF99",
            "type": "line"
        }
    ]
}